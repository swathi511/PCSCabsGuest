<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frs_ll_main"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:visibility="gone">

        <LinearLayout android:id="@+id/fsr_ll_cash_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_margin="18dp"
            android:background="@drawable/rect_red_cn_bg"
            android:visibility="gone">

            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/info_white"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash Payment"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/fsr_ll_wallet_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_margin="18dp"
            android:background="@drawable/rect_green_cn_bg"
            android:visibility="gone">

            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/info_white"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Payment"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <TextView android:id="@+id/frs_tv_trip_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorTextBlue"
            android:text="@string/tripId"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAshLight"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp">


            <TextView android:id="@+id/frs_tv_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driver_name"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="left"/>
            <TextView android:id="@+id/frs_tv_driver_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_image"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center"/>

            <TextView android:id="@+id/frs_tv_veh_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="vehicle category"
                android:textColor="@color/colorTextBlue"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@color/colorBlack"/>

            <TextView android:id="@+id/frs_tv_veh_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="vehicle Type"
                android:textColor="@color/colorAsh"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAshLight"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"/>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <TextView android:id="@+id/frs_tv_ride_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride StartTime"
                android:textColor="@color/colorAsh"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_green"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"/>

            <TextView android:id="@+id/frs_tv_pickup_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:textColor="@color/colorAsh"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="left"
                android:layout_weight="1"/>



        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <TextView android:id="@+id/frs_tv_ride_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride StopTime"
                android:textColor="@color/colorAsh"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/round_pink"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"/>

            <TextView android:id="@+id/frs_tv_drop_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop Location"
                android:textColor="@color/colorAsh"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="left"
                android:layout_weight="1"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAshLight"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView android:id="@+id/frs_tv_total_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs."
                    android:textColor="@color/colorTextBlue"
                    android:textSize="14sp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_fare"
                    android:textColor="@color/colorAshLight"
                    android:textSize="12sp"
                    android:layout_margin="6dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView android:id="@+id/frs_tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dist_travelled"
                    android:textColor="@color/colorAshLight"
                    android:textSize="12sp"
                    android:layout_margin="6dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView android:id="@+id/frs_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hr min"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_margin="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_taken"
                    android:textColor="@color/colorAshLight"
                    android:textSize="12sp"
                    android:layout_margin="6dp"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="12dp">

                <View android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAshLight"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Details"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>
                <View android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAshLight"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Fare"
                    android:textSize="13sp"
                    android:gravity="left"
                    android:textColor="@color/colorAsh"/>

                <TextView android:id="@+id/fsr_tv_total_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/xxx"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <LinearLayout android:id="@+id/frs_ll_other_charges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other Charges"
                    android:textSize="13sp"
                    android:gravity="left"
                    android:textColor="@color/colorAsh"/>

                <TextView android:id="@+id/frs_tv_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/xxx"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout android:id="@+id/fsr_tv_os_batta_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outstation Batta"
                    android:textSize="13sp"
                    android:gravity="left"
                    android:textColor="@color/colorAsh"/>

                <TextView android:id="@+id/fsr_tv_os_batta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/xxx"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/service_tax"
                    android:textSize="13sp"
                    android:gravity="left"
                    android:textColor="@color/colorAsh"/>

                <TextView android:id="@+id/frs_tv_taxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/xxx"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <LinearLayout android:id="@+id/frs_ll_cancel_charges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Previous ride Cancellation charges"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:textColor="@color/colorAsh" />

                <TextView android:id="@+id/frs_tv_cancel_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/xxx"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <TextView android:id="@+id/frs_tv_cancel_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(apart from wallet deduction if any)"
                android:textSize="8sp"
                android:gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Bill"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <TextView android:id="@+id/frs_tv_total_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/xxx"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:textColor="@color/colorTextBlue"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="16dp">

                <View android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAshLight"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Details"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>
                <View android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAshLight"
                    android:layout_weight="1"/>


            </LinearLayout>




            <LinearLayout android:id="@+id/frs_ll_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="4dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deducted From Wallet "
                    android:textColor="@color/colorAsh"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:gravity="left"

                    android:textStyle="bold"/>
                <TextView android:id="@+id/frs_tv_wallet_amnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. xx"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout android:id="@+id/frs_ll_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="2dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay By Cash "
                    android:textColor="@color/colorAsh"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:gravity="left"

                    android:textStyle="bold"/>
                <TextView android:id="@+id/frs_tv_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. xx"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RatingBar android:id="@+id/frs_rb_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:max="5"
                android:isIndicator="false"
                android:clickable="true"
                android:rating="1"
                android:stepSize="1"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:theme="@style/RatingBar"/>

            <TextView android:id="@+id/frs_tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="13sp"
                android:textColor="@color/colorTextBlue"
                android:padding="16dp"
                android:layout_below="@+id/frs_rb_stars"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"/>


        </RelativeLayout>
        <Button android:id="@+id/frs_bt_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay"
            android:textColor="@color/colorTextBlue"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:background="@drawable/rect_blue_stroke_bg_nc"
            android:textSize="16sp"
            android:visibility="gone"/>



    </LinearLayout>

</ScrollView>