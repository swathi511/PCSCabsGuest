<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <TextView android:id="@+id/ac_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Coupon"
        android:textStyle="bold"
        android:textColor="@color/colorAsh"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_margin="16dp"
        android:textAllCaps="true"/>
    <View android:id="@+id/ao_vw"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_below="@+id/ac_tv_text"/>
    <EditText android:id="@+id/ac_et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:hint="xxxx"
        android:textColorHint="#9e9e9e"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/colorAsh"
        android:layout_below="@+id/ao_vw"
        android:background="@drawable/alert_et_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ac_et_otp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/ok"
            android:textSize="12sp"
            android:background="@drawable/btn_bg_green"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <Button android:id="@+id/ao_bt_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/cancel"
            android:textSize="12sp"
            android:background="@drawable/btn_bg_red"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:visibility="gone"/>


    </LinearLayout>

    <Button android:id="@+id/ac_bt_ok"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/ok"
        android:textSize="12sp"
        android:background="@drawable/ride_now_bg"
        android:textColor="@color/colorYellow"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:layout_below="@+id/ac_et_otp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="24dp"/>




</RelativeLayout>