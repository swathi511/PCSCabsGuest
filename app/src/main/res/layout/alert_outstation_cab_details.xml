<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/rect_ash_stroke_bg">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approx. Kms"
            android:textColor="#5e5e5e"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView android:id="@+id/aocd_tv_mini_kms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs. - "
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate per Km"
            android:textColor="#5e5e5e"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView android:id="@+id/aocd_tv_mini_kms_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs. - "
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate per minute"
            android:textColor="#5e5e5e"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView android:id="@+id/aocd_tv_extra_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs. - "
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
