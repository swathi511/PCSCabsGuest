            android:textColor="#5e5e5e"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView android:id="@+id/aocd_tv_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. -"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peaktime charges"
            android:textColor="#5e5e5e"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView android:id="@+id/aocd_tv_surge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approx. Fare"
            android:textColor="#5e5e5e"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView android:id="@+id/aocd_tv_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs. - "
            android:textColor="@color/colorTextBlue"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#faf09d"
        android:padding="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allowed Kms per day"
                android:textColor="#5e5e5e"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="left"/>

            <TextView android:id="@+id/aocd_tv_min_kms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Rs. - "
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:layout_weight="1"
                android:gravity="right"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allowed Hrs per day"
                android:textColor="#5e5e5e"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="left"/>

            <TextView android:id="@+id/aocd_tv_allowed_hrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Rs. - "
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:layout_weight="1"
                android:gravity="right"/>
        </LinearLayout>

    </LinearLayout>




