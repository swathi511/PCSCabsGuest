<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true">

        <LinearLayout android:id="@+id/fss_ll_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPaleYellow"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback sent!"
                android:textColor="@color/colorBlack"
                android:padding="8dp"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView android:id="@+id/fss_tv_refid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Reference Id xxxxxxxxxxx generated."
                android:textColor="@color/colorBlack"
                android:padding="8dp"
                android:textSize="14sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect_ash_stroke_bg_single_line"
            android:padding="12dp"
            android:layout_marginBottom="10dp">

            <TextView android:id="@+id/fss_tv_rid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RID xxx"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/colorTextBlue"
                android:layout_marginBottom="6dp"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/fss_tv_b_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/booking_date"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

                <TextView android:id="@+id/fss_tv_total_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/Rs"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_gravity="center">

                <TextView android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/round_green"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>

                <TextView android:id="@+id/fss_tv_pickup_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_loc"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorAsh"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_gravity="center">

                <TextView android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/round_pink"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>

                <TextView android:id="@+id/fss_tv_drop_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drop_loc"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorAsh"/>

            </LinearLayout>

        </LinearLayout>

