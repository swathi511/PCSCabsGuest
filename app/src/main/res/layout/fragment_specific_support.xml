        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose an issue"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:gravity="left"
            android:layout_margin="10dp"
            android:textColor="@color/colorTextBlue"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"/>

        <EditText android:id="@+id/fss_et_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:hint="Or Tell us about it ..."
            android:textSize="14sp"
            android:textColorHint="@color/colorAshLight"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorAsh"
            android:lines="5"
            android:gravity="left"
            android:background="@drawable/rect_ash_stroke_bg_single_line"
            android:padding="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <Button android:id="@+id/fss_bt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textColor="@color/colorYellow"
            android:background="@drawable/ride_now_bg"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>