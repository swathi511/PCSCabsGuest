<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:background="#dcdcd9">

    <TextView android:id="@+id/ar_tv_rating_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How was your Ride!"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_margin="16dp"
        />

    <RatingBar android:id="@+id/ar_rb_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:max="5"
        android:isIndicator="false"
        android:clickable="true"

        android:stepSize="1"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:theme="@style/RatingBar"
        android:scaleX="0.9"
        android:scaleY="0.9"/>

    <EditText android:id="@+id/ar_et_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a Note"
        android:layout_margin="24dp"
        android:textSize="13sp"
        android:textColor="@color/colorAsh"
        android:background="@drawable/rect_ash_stroke_bg_single_line"
        android:lines="4"
        android:gravity="left"
        android:padding="8dp"/>

    <TextView android:id="@+id/ar_tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/colorYellow"
        android:background="@drawable/ride_now_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        />


</LinearLayout>