<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:id="@+id/fp_ll_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Balance"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="left"
            android:textAllCaps="true"/>

        <TextView android:id="@+id/fp_tv_wallet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Balance"
            android:textColor="@color/colorTextBlue"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"/>

        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. "
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_gravity="center"/>

        <EditText android:id="@+id/fp_et_amount_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:hint=""
            android:textColorHint="#d0d0d0"
           android:layout_gravity="center"
            android:paddingRight="8dp"
            android:maxLines="1"/>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/fp_tv_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.100"
                android:background="@drawable/rect_blue_stroke_bg_nc"
                android:padding="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <TextView android:id="@+id/fp_tv_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.200"
                android:background="@drawable/rect_blue_stroke_bg_nc"
                android:padding="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <TextView android:id="@+id/fp_tv_300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.300"
                android:background="@drawable/rect_blue_stroke_bg_nc"
                android:padding="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="gone"/>

            <TextView android:id="@+id/fp_tv_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.500"
                android:background="@drawable/rect_blue_stroke_bg_nc"
                android:padding="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>


        </LinearLayout>


        </LinearLayout>

    <Button android:id="@+id/fp_bt_add_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_money"
        android:background="@drawable/ride_now_bg"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/colorYellow"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:textAllCaps="false"/>



    <LinearLayout android:id="@+id/fp_ll_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingBottom="24dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#d0d0d0">

        <TextView android:id="@+id/fp_tv_txn_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Transaction Successful !"
            android:textColor="@color/colorAsh"
            android:textSize="18sp"
            android:layout_margin="16dp"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:text="@string/total_wallet_balance"
        android:textAllCaps="true"/>

    <TextView android:id="@+id/fp_tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs. x"
        android:textSize="20sp"
        android:textColor="@color/colorTextBlue"
        android:textStyle="bold"
        android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>